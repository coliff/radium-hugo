{
  "name": "radium-hugo",
  "description": "Static Website Project Boilerplate for Hugo",
  "version": "0.9.0",
  "homepage": "https://github.com/coliff/radium-hugo/",
  "private": true,
  "author": "C. Oliff",
  "devDependencies": {
    "eslint": "^6.4.0",
    "eslint-config-airbnb": "^18.0.1",
    "eslint-config-airbnb-base": "14.0.0",
    "eslint-config-prettier": "6.5.0",
    "eslint-plugin-prettier": "3.1.0",
    "gulp": "^4.0.2",
    "gulp-bootlint": "^0.11.0",
    "gulp-imagemin": "^6.2.0",
    "husky": "^3.0.5",
    "lint-staged": "^9.2.5",
    "prettier": "^1.18.2",
    "stylelint": "^11.0.0",
    "stylelint-config-recommended": "^3.0.0"
  },
  "browserslist": [
    "defaults"
  ],
  "babel": {
    "presets": [
      [
        "env",
        {
          "targets": {
            "node": "current"
          }
        }
      ]
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "linters": {
      "*.{js,scss,json,yaml,yml}": [
        "prettier --write",
        "git add"
      ],
      "*.scss": [
        "stylelint --fix",
        "git add"
      ],
      "*.js": [
        "eslint --fix",
        "git add"
      ]
    },
    "ignore": [
      "*.min.js, *.min.css, *.min.**, docs/*"
    ]
  }
}
